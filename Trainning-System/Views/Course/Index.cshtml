@model List<Course>

<div class="header">
    <h1>Our Courses</h1>
    <div id="addInstructorBtn">
        <a href="/Course/addCourse" class="add btn btn-success">Add new Course</a>
    </div>
</div>

<div class="Container">
    @foreach (var course in Model)
    {
        // don't show the deleted courses using soft delete method
        if (course.isDeleted == true) 
            continue; 

        // note: if u want to the the traditional way, comment the previous condition :)

        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@course.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@course?.Department?.Name</h6>
                <p class="card-text">Max-Degree: @course.Degree</p>
                <p class="card-text">Min_Degree: @course.Min_Degree</p>
                <div class="options">
                    <a href="/Course/UpdateCourse/@course.Id" class="edit btn btn-primary">Edit</a>
                    <a href="/Course/DeleteCourse/@course.Id" class="del btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .header {
        display: flex;
        justify-content: space-between;
        padding: 10px;
        margin-bottom: 20px;
    }

    #addInstructorBtn a {
        color: white;
        text-decoration: none;
    }

    #addInstructorBtn {
        display: flex;
        margin-right: 50px;
    }

    .Container {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: space-evenly;
    }

    .card {
        padding: 10px;
        border-radius: 15px;
        margin-bottom: 20px;
        transition: box-shadow 0.3s ease-in-out;
        box-shadow: 2px 5px 8px rgba(0, 0, 0, 0.4);
    }

    .card:hover {
        background-color: aliceblue;
        border: 1.5px solid green;
        box-shadow: 5px 10px 16px rgba(0, 0, 0, 0.8);
    }

    .card-img-top {
        width: 100%;
        height: 250px;
        border-radius: 8px;
    }

    .card-body {
        text-align: center;
    }

    .add,.edit, .del {
        color: black;
        display: block;
        font-weight: 500;
        text-align: center;
        margin: 10px auto;
        border-radius: 25px;
        padding: 0.375rem 0.75rem;
        font-size: 20px;
        line-height: 1.5;
        transition: color 0.3s ease-in-out;
    }

    .add {
        background-color: #28a745;
        border: 2px solid transparent;
    }

    .edit {
        width: 100px;
        background-color: #007bff;
        border: 2px solid transparent;
    }

    .del {
        width: 100px;
        background-color: #dc3545;
        border: 2px solid transparent;
    }

    .options {
        display: flex;
        justify-content: space-between;
    }
</style>
