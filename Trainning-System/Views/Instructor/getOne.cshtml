@model Instructor

<div class="Container">
    <div class="card" style="width: 18rem;">
        <img src="~/images/@Model.Image" class="card-img-top" alt="@Model.Name">
        <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Address</p> 
        </div>
        <ul class="list-group list-group-flush">
        <li class="list-group-item">Department: @Model.Department.Name</li>
            <li class="list-group-item">Course: @Model.Course.Name</li>
        <li class="list-group-item">Salary: @Model.salary $</li>
        </ul>
        <div class="card-body">
            <a href="/instructor/index/" class="btn btn-primary">Back to Home</a>
        </div>
    </div>
</div>

<style>
    .card {
        padding: 10px;
        border-radius: 15px;
        transition: box-shadow 0.3s ease-in-out;
        box-shadow: 2px 5px 8px rgba(0, 0, 0, 0.4);
    }

    .card:hover {
        box-shadow: 5px 10px 16px rgba(0, 0, 0, 0.8);
        border: 1.5px solid green;
    }

    .Container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .card-img-top {
        width: 100%;
        height: 250px;
        border-radius: 8px;
    }

    .card-body {
        text-align: center;
    }

    .btn {
        color: Black;
        display: block;
        font-weight: 500;
        text-align: center;
        margin: 10px auto;
        border-radius: 25px;
        background-color: #007bff;
        border: 2px solid transparent;
        padding: 0.375rem 0.75rem;
        font-size: 20px;
        line-height: 1.5;
        transition: color 0.3s ease-in-out, 
                        background-color 0.3s ease-in-out, 
                        border-color 0.3s ease-in-out, 
                        box-shadow 0.3s ease-in-out;
    }

    .btn:hover {
        border-color: #0056b3;
        background-color: green;
    }
</style>