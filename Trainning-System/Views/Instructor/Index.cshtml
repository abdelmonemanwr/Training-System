@model List<Instructor>

<div class="header">
    <h1>Our Instructors</h1>
    <div id="addInstructorBtn">
        <a href="/instructor/addInstructor" class="btn btn-primary">Add new Instructor</a>
    </div>
</div>

<div class="Container">
    @foreach (var instructor in Model)
    {
        <div class="card" style="width: 18rem;">
            <img src="~/images/@instructor.Image" class="card-img-top" alt="@instructor.Name">
            <div class="card-body">
                <h6 class="card-title">@instructor.Name</h6>

            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Department: @instructor.Department.Name </li>
                <li class="list-group-item">Course: @instructor.Course?.Name</li>
            </ul>
            <div class="card-body">
                <a href="/instructor/getOne/@instructor.Id" class="btn btn-primary">More Details</a>
            </div>
        </div>
    }
</div>

<style>
    .header {
        display: flex;
        justify-content: space-between;
        padding: 10px;
        margin-bottom: 20px;
    }

    #addInstructorBtn a {
        color: white;
        text-decoration: none;
    }

    #addInstructorBtn {
        display: flex;
        margin-right: 50px;
    }

    .Container {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: space-evenly;
    }

    .card {
        padding: 10px;
        border-radius: 15px;
        margin-bottom: 20px;
        transition: box-shadow 0.3s ease-in-out;
        box-shadow: 2px 5px 8px rgba(0, 0, 0, 0.4);
    }

    .card:hover {
        border: 1.5px solid green;
        box-shadow: 5px 10px 16px rgba(0, 0, 0, 0.8);
    }

    .card-img-top {
        width: 100%;
        height: 250px;
        border-radius: 8px;
    }

    .card-body {
        text-align: center;
    }

    .btn {
        color: Black;
        display: block;
        font-weight: 500;
        text-align: center;
        margin: 10px auto;
        border-radius: 25px;
        background-color: #007bff;
        border: 2px solid transparent;
        padding: 0.375rem 0.75rem;
        font-size: 20px;
        line-height: 1.5;
        transition: color 0.3s ease-in-out,
            background-color 0.3s ease-in-out,
            border-color 0.3s ease-in-out,
            box-shadow 0.3s ease-in-out;
    }

    .btn:hover {
        border-color: #0056b3;
        background-color: green;
    }
</style>